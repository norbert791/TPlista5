<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">


    <!--  To avoid an error: SET GLOBAL time_zone = '-6:00'; -->
    <!-- Initialization for data source -->
    <bean id="dataSource"
          class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name = "driverClassName" value = "com.mysql.jdbc.Driver"/>
        <property name = "url" value = "jdbc:mariadb://localhost:3306/techprog_lista5_hibernate?useSSL=false"/>
        <property name = "username" value = "tpLista5Hibernate"/>
        <property name = "password" value = "123"/>
    </bean>

    <!-- Definition for studentJDBCTemplate bean -->

    <bean id = "SimpleLogger"
          class = "org.Norbert.lista5.Database.HibernateImplementation.HibernateLogger">
        <property name = "dataSource" ref = "dataSource" />
    </bean>

    <bean id = "SimpleRetriever"
          class = "org.Norbert.lista5.Database.HibernateImplementation.HibernateRetriever">
        <property name="dataSource" ref = "dataSource" />
    </bean>

    <bean
        id ="userManager"
        class="org.Norbert.lista5.Database.HibernateImplementation.HibernateUserManager">
        <property name="sessionFactory" ref = "mySessionFactory"></property>
    </bean>

    <bean id="mySessionFactory"  class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"></property>
        <property name="packagesToScan"
                  value="org.Norbert.lista5.Database.HibernateImplementation"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
            </props>
        </property>
    </bean>

</beans>