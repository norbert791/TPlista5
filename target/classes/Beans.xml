<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">


<!--  To avoid an error: SET GLOBAL time_zone = '-6:00'; -->
   <!-- Initialization for data source -->
   <bean id="dataSource" 
      class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name = "driverClassName" value = "org.mariadb.jdbc.Driver"/>
      <property name = "url" value = "jdbc:mariadb://localhost:3306/techprog.lista5?useSSL=false"/>
      <property name = "username" value = "admin"/>
      <property name = "password" value = "Norberto40k"/>
   </bean>

   <!-- Definition for studentJDBCTemplate bean -->
   <bean id = "SimpleLogger"
      class = "org.Norbert.lista5.Database.jdbcTemplateImplementation.SimpleLogger">
      <property name = "dataSource" ref = "dataSource" />    
   </bean>

   <bean id = "SimpleRetriever"
         class = "org.Norbert.lista5.Database.jdbcTemplateImplementation.SimpleRetriever">
         <property name="dataSource" ref = "dataSource" />
   </bean>

   <bean id="trackMyBean" class="org.Norbert.Database.HibernateImplementation.MoveTracker"></bean>

   <bean class="org.springframework.aop.aspectj.annotation.AnnotationAwareAspectJAutoProxyCreator"></bean>

</beans>